  <groupId>org.geowebcache</groupId>
  <artifactId>geowebcache</artifactId>
  <version>2.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <!-- GWC VERSION -->
  <name>geowebcache</name>
  <url>https://geowebcache.osgeo.org</url>

  <modules>
    <module>core</module>
    <module>georss</module>
    <module>gmaps</module>
