  <scm>
    <connection>scm:git:git://github.com/geowebcache/geowebcache.git</connection>
    <developerConnection>scm:git:[fetch=]git://github.com/geowebcache/geowebcache.git[push=]git@github.com:geowebcache/geowebcache.git</developerConnection>
    <url>https://github.com/geowebcache/geowebcache</url>
  </scm>

  <distributionManagement>
    <repository>
      <id>nexus</id>
      <name>OSGeo GeoServer Release Repository</name>
      <url>https://repo.osgeo.org/repository/Geoserver-releases/</url>
    </repository>
    <snapshotRepository>
      <id>nexus</id>
      <name>OSGeo GeoServer Snapshot Repository</name>
      <url>https://repo.osgeo.org/repository/geoserver-snapshots/</url>
